@model MySqlFreamworkProjectWeb.Database.Entity.AdminUser
@{
    ViewData["Title"] = "Yeni Kullanıcı Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container">
    <div class="col-12">
        <div class="card">
            <div class="card-title">
                <h3 class="card-title">Yeni Kullanıcı Güncelle</h3>
            </div>
            <div class="card-body">
                <form action="/kullanici-guncelle/@Model.ID" method="post">
                    @if (ViewBag.Hata != null)
                    {
                        <div class="form-group">
                            <div class="alert alert-danger">
                                <h5 style="color:black;"><i class="flaticon-381-error"></i> @ViewBag.Hata</h5>
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <label for="exampleInputEmail1">Please enter Name</label>
                        <input type="text" class="form-control" value="@Model.Name" maxlength="40" name="Name" placeholder="Please enter Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Please enter Surname</label>
                        <input type="text" class="form-control" value="@Model.Surname" maxlength="40" name="Surname" placeholder="Please enter Surname">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Please enter E-Mail</label>
                        <input type="email" inputmode="email" value="@Model.Email" class="form-control" maxlength="40" name="Email" placeholder="Please enter E-Mail">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Please enter Password</label>
                        <input type="password" inputmode="numeric" maxlength="8" value="@Model.Password" class="form-control" name="Password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary">Yeni Kullanıcı Güncelle</button>
                    <a href="/kullanici-listele" id="GetData()" class="btn btn-outline-dark">Listeye Geri Dön</a>
                </form>
            </div>
        </div>
    </div>
</div>